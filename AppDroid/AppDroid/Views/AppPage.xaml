<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDroid.Views.AppPage"
             BackgroundImageSource="bg.png">
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,5">
                <Label x:Name="Lbl_TituloApp" Text="Titulo de la App" FontSize="35" VerticalOptions="FillAndExpand" Margin="0,0,0,30" HorizontalTextAlignment="Center"/>
                <Image Source="imagenDefault.jpg" Aspect="Fill" HeightRequest="150" WidthRequest="150"/>
                <Label x:Name="Lbl_Descripcion" Text="Descripcion" FontSize="15" VerticalOptions="FillAndExpand" Margin="0,0,0,30" HorizontalTextAlignment="Center"/>
                <Label x:Name="Lbl_Trailer" Text="Tráiler" FontSize="15" VerticalOptions="FillAndExpand" Margin="0,0,0,30" HorizontalTextAlignment="Center"/>
            <Grid>
                <WebView x:Name="Video" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></WebView>
            </Grid>
            <Button x:Name="BtnDescargar" Text="Descargar" Clicked="BtnDescargar_Click" HorizontalOptions="Fill" Margin="5,0,5,15" TextTransform="None" FontSize="16" BackgroundColor="ForestGreen"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>